@model BeanSceneReservationApp.Models.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Book your reservation</h1>

<h4>Welcome please enter enter in your details to book your reservation</h4>
<p>please enter in your email so we can confirm your resrevation the rest of your personal inforamtion is optional as we value your privacy no information for guests is saved for longer than 30 days</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
            <div class="form-group">
                <label asp-for="GuestName" class="control-label"></label>
                <input asp-for="GuestName" class="form-control" />
                <span asp-validation-for="GuestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfGuests" class="control-label"></label>
                <input asp-for="NumOfGuests" class="form-control" />
                <span asp-validation-for="NumOfGuests" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <p class="text-info">Please enter here if you require any special arrangements such as a high chair or dietary requirments</p>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderSource" class="control-label"></label>
                <p class="text-info">Please confirm which way the order was booked if your using the website please select Online</p>
                <select asp-for="OrderSource" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(BeanSceneReservationApp.Models.OrderSource)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="OrderSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SittingTime" class="control-label"></label>
                <select asp-for="SittingTime" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(BeanSceneReservationApp.Models.SittingTime)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="SittingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Area Name</label>
                <p class="text-info">Please Select a table that is in the correct area</p>
                <p class="text-info">Main rooms tables are labeled as 'M', balcony tables are labeled as 'B', and outdoor tables are labeled as 'O'.</p>
                <select asp-for="AreaName" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(BeanSceneReservationApp.Models.AreaName)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="AreaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Table Number</label>
                <p class="text-info">Tables starting with M are for the Main area, Tables starting with O are for the OutDoor area O1, O2 Tables starting with B are for the Balcony area, B1, B2</p>
                <select asp-for="TableId" class="form-control" asp-items="ViewBag.TableId"></select>
                <span asp-validation-for="TableId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
